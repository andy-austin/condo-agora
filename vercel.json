{
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/next" },
    {
      "src": "apps/api/index.py",
      "use": "@vercel/python@4.7.1",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/index.py" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ]
}
