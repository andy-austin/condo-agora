{
  "name": "vercel-python-react-template",
  "private": true,
  "scripts": {
    "build": "python3 -m pip install prisma && python3 -m prisma generate --schema=apps/api/prisma/schema.prisma && turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "prepare": "husky install",
    "migrate": "pnpm --filter api run prisma:migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prisma": "^5.22.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "cd apps/web && eslint --fix"
    ],
    "apps/api/**/*.py": [
      "bash -c 'cd apps/api && python -m black .'",
      "bash -c 'cd apps/api && python -m isort .'",
      "bash -c 'cd apps/api && python -m flake8 --max-line-length=120 .'"
    ]
  }
}
